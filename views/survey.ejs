<!doctype html>
<html>
  <head>
    <title><%= shopName %> â€” Survey</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <%- include('partials/nav', { shopName }) %>
    <main>
      <div class="card">
        <form method="POST" action="/survey_result">
          <label for="first">First name</label>
          <input id="first" type="text" name="first" required>

          <label for="last">Surname</label>
          <input id="last" type="text" name="last" required>

          <label for="email">Email address</label>
          <input id="email" type="email" name="email" required>

          <label for="age">How old are you?</label>
          <input id="age" type="number" name="age" min="0" step="1" required>

            <p>Which categories of drink do you consume? (Select all that apply)</p>
            <% for (let i = 0; i < productCategories.length; i++) { %>
            <label>
                <input type="checkbox" name="categories[]" value="<%= productCategories[i] %>">
                <%= productCategories[i] %>
            </label><br>
            <% } %>

          <label style="margin-top:.75rem;">
            <input type="checkbox" name="student">
            Are you a student?
          </label>

          <div style="margin-top:1rem;">
            <input type="submit" value="Submit Survey">
          </div>
        </form>
      </div>
    </main>
  </body>
</html>
