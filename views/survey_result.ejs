<!doctype html>
<html>
  <head>
    <title><%= shopName %> â€” Survey Result</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <%- include('partials/nav', { shopName }) %>
    <main>
      <div class="card">
        <h2>Summary</h2>
        <ul>
          <li><strong>Name:</strong> <%= response.first %> <%= response.last %></li>
          <li><strong>Email:</strong> <%= response.email %></li>
          <li><strong>Age:</strong> <%= response.age %></li>
          <li><strong>Categories:</strong>
            <%= (response.categories && response.categories.length)
                  ? response.categories.join(", ")
                  : "None selected" %>
          </li>
          <li><strong>Student:</strong> <%= response.student %></li>
        </ul>
      </div>
    </main>
  </body>
</html>
